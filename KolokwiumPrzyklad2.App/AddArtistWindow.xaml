<Window x:Class="KolokwiumPrzyklad2.App.AddArtistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KolokwiumPrzyklad2.App"
        mc:Ignorable="d"
        Title="AddArtistWindow" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            


        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Imię::</Label>
        <TextBox x:Name="FirstNameTB"  Grid.Row="0" Grid.Column="1"></TextBox>

        <Label Grid.Row="1" Grid.Column="0">Nazwisko:</Label>
        <TextBox x:Name="LastNameTB"  Grid.Row="1" Grid.Column="1"></TextBox>

        

        <Button x:Name="AddBT" Grid.Row="4" Grid.ColumnSpan="2" Click="AddBT_Click">Dodaj Artyste</Button>
    </Grid>
</Window>
