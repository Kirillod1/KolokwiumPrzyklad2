<Window x:Class="KolokwiumPrzyklad2.App.AddAlbumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KolokwiumPrzyklad2.App"
        mc:Ignorable="d"
        Title="AddAlbumWindow" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            

        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Nazwa:</Label>
        <TextBox x:Name="NameTB"  Grid.Row="0" Grid.Column="1"></TextBox>

        <Label Grid.Row="1" Grid.Column="0">Gatunek:</Label>
        <TextBox x:Name="GenreTB"  Grid.Row="1" Grid.Column="1"></TextBox>

        <Label Grid.Row="2" Grid.Column="0">Data Wydania:</Label>
        <DatePicker x:Name="YearTB"  Grid.Row="2" Grid.Column="1"></DatePicker>
        
        <Button x:Name="AddBT" Grid.Row="4" Grid.ColumnSpan="2" Click="AddBT_Click">Dodaj Album</Button>
    </Grid>
</Window>
